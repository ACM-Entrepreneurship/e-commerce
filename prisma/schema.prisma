generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "postgresql"
  url      = env("SHADOW_DATABASE_URL")
}

model Testing {
  id           BigInt    @id @default(autoincrement())
  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  place_holder String?
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  image     String?
  fName     String
  lName     String
  username  String?  @unique
  password  String?
  cardNumber BigInt @unique
  cvv     Int?
  expDate String?
  nameOnCard String?
  review String[]
  role      Role     @default(USER)
}

model Product {
  id          String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name       String
  description String
  url         String
  imageUrl    String
  category    String
  manufacturer String
}

enum Role {
  ADMIN
  USER
  VENDOR
}

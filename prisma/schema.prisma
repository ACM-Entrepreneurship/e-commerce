generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "postgresql"
  url      = env("SHADOW_DATABASE_URL")
}

model Testing {
  id           BigInt    @id @default(autoincrement())
  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  place_holder String?
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  image     String?
  role      Role     @default(USER)
  fName     String
  lName     String
  password  String?
  username  String?  @unique
}

model Product {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  description  String
  url          String
  category     String
  manufacturer String
  name         String
  updatedAt    DateTime @updatedAt
  image        String
}

enum Role {
  ADMIN
  USER
  VENDOR
}
